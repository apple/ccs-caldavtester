				<ruri>$calendarpath2:/</ruri>
				<ruri>$inboxpath2:/</ruri>
				<ruri>$pcalendarpath1:/</ruri>
				<ruri>$pinboxpath1:/</ruri>
			</request>
		</test>
	</test-suite>

