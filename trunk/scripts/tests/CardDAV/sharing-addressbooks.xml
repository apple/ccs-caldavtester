				<ruri>$addressbookpath1:/1.vcf</ruri>
				<verify>
					<callback>addressDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CardDAV/sharing/addressbooks/read-write/5.vcf</value>
