<caldavtest>
	<description>Test alarm dismissal behavior</description>

	<require-feature>
		<feature>caldav</feature>
	</require-feature>

	<start/>
	
	<test-suite name='Simple dismissal'>
		<test name='1'>
			<description>PUT event with alarm</description>
			<request>
				<method>PUT</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/alarm-dismissal/1.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='2'>
			<description>Verify data</description>
			<request>
				<method>GET</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/alarm-dismissal/1.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='3'>
			<description>PUT event with ack'd alarm</description>
			<request>
				<method>PUT</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/alarm-dismissal/2.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='4'>
			<description>Verify data</description>
			<request>
				<method>GET</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/alarm-dismissal/2.ics</value>
					</arg>
				</verify>
			</request>
		</test>
	</test-suite>

	<test-suite name='Recurring dismissal'>
		<test name='1'>
			<description>PUT event with alarm</description>
			<request>
				<method>PUT</method>
				<ruri>$calendarpath1:/2.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/alarm-dismissal/3.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='2'>
			<description>Verify data</description>
			<request>
				<method>GET</method>
				<ruri>$calendarpath1:/2.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/alarm-dismissal/3.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='3'>
			<description>PUT event with ack'd alarm</description>
			<request>
				<method>PUT</method>
				<ruri>$calendarpath1:/2.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/alarm-dismissal/4.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='4'>
			<description>Verify data</description>
			<request>
				<method>GET</method>
				<ruri>$calendarpath1:/2.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/alarm-dismissal/4.ics</value>
					</arg>
				</verify>
			</request>
		</test>
	</test-suite>

	<test-suite name='Bad property value'>
		<test name='1'>
			<description>PUT event with alarm</description>
			<request>
				<method>PUT</method>
				<ruri>$calendarpath1:/3.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/alarm-dismissal/5.ics</filepath>
				</data>
				<verify>
					<callback>prepostcondition</callback>
					<arg>
						<name>error</name>
						<value>{urn:ietf:params:xml:ns:caldav}valid-calendar-data</value>
					</arg>
				</verify>
			</request>
		</test>
	</test-suite>

	<end>
		<request>
			<method>DELETEALL</method>
			<ruri>$calendarpath1:/</ruri>
		</request>
	</end>
	
</caldavtest>
