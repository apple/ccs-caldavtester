<caldavtest>
	<description>Test implicit scheduling with external participants</description>

	<require-feature>
		<feature>caldav</feature>
		<feature>implicit-scheduling</feature>
	</require-feature>

	<start>
		<request user="$userid1:" pswd="$pswd1:">
			<method>GET</method>
			<ruri>$calendarpath1:/</ruri>
		</request>
		<request user="$userid2:" pswd="$pswd2:">
			<method>GET</method>
			<ruri>$calendarpath2:/</ruri>
		</request>
	</start>
	
	<test-suite name='Attempt to store externally organized event' ignore='no'>
		<test name='1'>
			<description>Attendee stores organized event</description>
			<request print-response='no'>
				<method>PUT</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/imip/1.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='2'>
			<description>Attendee checks data</description>
			<request print-response='no'>
				<method>GET</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/imip/2.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='3'>
			<description>Attendee stores organized event with SCHEDULE-AGENT=NONE</description>
			<request print-response='no'>
				<method>PUT</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/imip/3.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='4'>
			<description>Attendee checks data</description>
			<request print-response='no'>
				<method>GET</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/imip/4.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='5'>
			<description>Attendee stores organized event with SCHEDULE-AGENT=CLIENT</description>
			<request print-response='no'>
				<method>PUT</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/imip/5.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='6'>
			<description>Attendee checks data</description>
			<request print-response='no'>
				<method>GET</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/imip/6.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='7'>
			<description>Clean-up</description>
			<request user="$userid1:" pswd="$pswd1:">
				<method>DELETEALL</method>
				<ruri>$calendarpath1:/</ruri>
			</request>
			<request user="$userid1:" pswd="$pswd1:">
				<method>DELETEALL</method>
				<ruri>$inboxpath1:/</ruri>
			</request>
			<request user="$userid2:" pswd="$pswd2:">
				<method>DELETEALL</method>
				<ruri>$calendarpath2:/</ruri>
			</request>
			<request user="$userid2:" pswd="$pswd2:">
				<method>DELETEALL</method>
				<ruri>$inboxpath2:/</ruri>
			</request>
		</test>
	</test-suite>
	
	<test-suite name='Attempt to store local organized event with SCHEDULE-AGENT=SERVER' ignore='no'>
		<test name='1'>
			<description>Attendee stores organized event</description>
			<request user="$userid2:" pswd="$pswd2:" print-response='no'>
				<method>PUT</method>
				<ruri>$calendarpath2:/1.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/imip/7.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
					<arg>
						<name>status</name>
						<value>403</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='2'>
			<description>Attendee checks data</description>
			<request print-response='no'>
				<method>GET</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<verify>
					<callback>statusCode</callback>
					<arg>
						<name>status</name>
						<value>404</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='3'>
			<description>Clean-up</description>
			<request user="$userid1:" pswd="$pswd1:">
				<method>DELETEALL</method>
				<ruri>$calendarpath1:/</ruri>
			</request>
			<request user="$userid1:" pswd="$pswd1:">
				<method>DELETEALL</method>
				<ruri>$inboxpath1:/</ruri>
			</request>
			<request user="$userid2:" pswd="$pswd2:">
				<method>DELETEALL</method>
				<ruri>$calendarpath2:/</ruri>
			</request>
			<request user="$userid2:" pswd="$pswd2:">
				<method>DELETEALL</method>
				<ruri>$inboxpath2:/</ruri>
			</request>
		</test>
	</test-suite>

	<test-suite name='Store externally organized event without matching attendee' ignore='no'>
		<test name='1'>
			<description>Attendee stores organized event (no local attendees)</description>
			<request print-response='no'>
				<method>PUT</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/imip/8.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='2'>
			<description>Attendee checks data</description>
			<request print-response='no'>
				<method>GET</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/imip/9.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='3'>
			<description>Attendee stores organized event (one local attendee)</description>
			<request print-response='no'>
				<method>PUT</method>
				<ruri>$calendarpath1:/2.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/imip/10.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='4'>
			<description>Attendee checks data</description>
			<request print-response='no'>
				<method>GET</method>
				<ruri>$calendarpath1:/2.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/imip/11.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='5'>
			<description>Attendee updates organized event (one local attendee)</description>
			<request print-response='no'>
				<method>PUT</method>
				<ruri>$calendarpath1:/2.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/imip/12.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='6'>
			<description>Attendee checks data</description>
			<request print-response='no'>
				<method>GET</method>
				<ruri>$calendarpath1:/2.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/imip/13.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='7'>
			<description>Attendee deletes organized event (one local attendee)</description>
			<request print-response='no'>
				<method>DELETE</method>
				<ruri>$calendarpath1:/2.ics</ruri>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='8'>
			<description>Attendee stores organized event with SCHEDULE-AGENT=CLIENT</description>
			<request print-response='no'>
				<method>PUT</method>
				<ruri>$calendarpath1:/3.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/imip/14.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='9'>
			<description>Attendee checks data</description>
			<request print-response='no'>
				<method>GET</method>
				<ruri>$calendarpath1:/3.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/imip/14.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='10'>
			<description>Attendee stores organized event with SCHEDULE-AGENT=CLIENT</description>
			<request print-response='no'>
				<method>PUT</method>
				<ruri>$calendarpath1:/4.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/imip/15.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='11'>
			<description>Attendee checks data</description>
			<request print-response='no'>
				<method>GET</method>
				<ruri>$calendarpath1:/4.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/imip/15.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='12'>
			<description>Clean-up</description>
			<request user="$userid1:" pswd="$pswd1:">
				<method>DELETEALL</method>
				<ruri>$calendarpath1:/</ruri>
			</request>
			<request user="$userid1:" pswd="$pswd1:">
				<method>DELETEALL</method>
				<ruri>$inboxpath1:/</ruri>
			</request>
			<request user="$userid2:" pswd="$pswd2:">
				<method>DELETEALL</method>
				<ruri>$calendarpath2:/</ruri>
			</request>
			<request user="$userid2:" pswd="$pswd2:">
				<method>DELETEALL</method>
				<ruri>$inboxpath2:/</ruri>
			</request>
		</test>
	</test-suite>

	<end/>
	
</caldavtest>
