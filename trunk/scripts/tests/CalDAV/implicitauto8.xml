			<description>Create new event</description>
			<request>
				<method>PUT</method>
				<ruri>$calendarpath1:/3.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/auto8/suite2/1.ics</filepath>
