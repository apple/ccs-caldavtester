	<test-suite name="POSTs free busy" ignore='no'>
		<test name='1'>
			<description>POST free busy</description>
			<request print-response='no'>
				<method>POST</method>
				<ruri>$outboxpath1:/</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/schedule/6.txt</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
				<verify>
					<callback>dataString</callback>
					<arg>
						<name>contains</name>
						<value>METHOD:REPLY</value>
						<value>FREEBUSY;FBTYPE=BUSY:$now.year.1:0101T170000Z/PT1H,$now.year.1:0101T190000Z/PT1H,$now.year.1:0101T220000Z/PT1H</value>
						<value>FREEBUSY;FBTYPE=BUSY:$now.year.1:0101T190000Z/PT2H,$now.year.1:0101T220000Z/PT1H</value>
					</arg>
					<arg>
						<name>unwrap</name>
